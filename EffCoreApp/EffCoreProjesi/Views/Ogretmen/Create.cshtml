@model EffCoreProjesi.Models.Ogretmen

@{
    ViewData["Title"] = "Yeni Öğretmen Ekle";
}

<h2>Yeni Öğretmen Ekle</h2>

<div style="max-width: 600px; margin: auto; padding: 20px; border: 1px solid #ddd; border-radius: 10px; box-shadow: 0 2px 6px rgba(0,0,0,0.1);">
    <form asp-action="Create" method="post">
        <div>
            <label>Ad</label>
            <input asp-for="Ad" class="form-control" />
        </div>
        <div>
            <label>Soyad</label>
            <input asp-for="Soyad" class="form-control" />
        </div>
        <div>
            <label>Eposta</label>
            <input asp-for="Eposta" class="form-control" />
        </div>
        <div>
            <label>Telefon</label>
            <input asp-for="Telefon" class="form-control" />
        </div>
        <div>
            <label>Başlama Tarihi</label>
            <input asp-for="BaslamaTarihi" type="date" class="form-control" />
        </div>
        <br />
        <button type="submit" class="btn btn-success">Kaydet</button>
        <a asp-action="Index" class="btn btn-secondary" style="margin-left: 10px;">İptal</a>
    </form>
</div>
