@model IdentityApp.ViewModels.GirisViewModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<h2>Giriş Yap</h2>

<form asp-action="Giris" method="post">
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Sifre" class="form-label"></label>
        <input asp-for="Sifre" class="form-control" type="password" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Giriş Yap</button>

    <div class="mt-2">
        <a asp-controller="Hesap" asp-action="SifremiUnuttum" class="btn btn-link">Şifremi Unuttum?</a>
    </div>
</form>

<p class="mt-3">
    Hesabınız yok mu? <a asp-controller="Hesap" asp-action="Kayit">Kayıt Ol</a>
</p>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

