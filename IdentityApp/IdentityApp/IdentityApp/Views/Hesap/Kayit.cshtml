@model IdentityApp.ViewModels.KayitViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<h2 class="mb-3">Kayıt Ol</h2>

<form asp-action="Kayit" method="post">
    <div class="mb-3">
        <label asp-for="AdSoyad" class="form-label"></label>
        <input asp-for="AdSoyad" class="form-control" />
        <span asp-validation-for="AdSoyad" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Sifre" class="form-label"></label>
        <input asp-for="Sifre" class="form-control" type="password" />
        <span asp-validation-for="Sifre" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="SifreTekrar" class="form-label"></label>
        <input asp-for="SifreTekrar" class="form-control" type="password" />
        <span asp-validation-for="SifreTekrar" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Kayıt Ol</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
